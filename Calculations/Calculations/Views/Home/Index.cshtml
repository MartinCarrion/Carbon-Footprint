@{
    ViewData["Title"] = "Carbon-Footprint";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .container {
            padding-top: 10px;
            padding: 0;
            width: 90%;
            margin: auto;
            min-width: 1000px;
            max-width: 2000px;
            position: relative;
            text-align: center;
            color: antiquewhite;
            font-size: 24px;
            text-decoration: double;
        }

        div.Calculations {
            border: 5px solid black;
            padding-top: 10px;
            padding: 0;
            width: 90%;
            margin: auto;
            min-width: 1000px;
            max-width: 2000px;
            position: relative;
            text-align: center;
            color: black;
            font-size: 24px;
            text-decoration: double;
            background-color: antiquewhite;
            margin-top:5px;
            height:1000px;
        }

        .centered {
            padding: 0;
            width: 90%;
            margin: auto;
            min-width: 1000px;
            max-width: 2000px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        
        
    </style>
</head>
<body style="background-color:lightgreen;">

    <div class="container">
        <img src="https://images.freeimages.com/images/large-previews/553/plitvice-lakes-1362681.jpg" alt="Environment"style="width:100%;opacity:.9;margin-top:5%;padding-top:10px;">
        <div class="centered" style="border:solid;">
            You Need Nature. Nature Needs You.<br />
            From volunteering with The Nature Conservancy to reducing your carbon footprint,<br/>
            there are so many ways you can get involved and do your part to support a world<br/>
            where people and nature thrive together <br />
            - The Nature Conservancy
        </div>
    </div>
    <div class="Calculations"style="width:100%;opacity:.9;">
        <h1>Calculations</h1>
        <p>
            <label>House</label>
            <input type="radio" name="LivingHouse" value="House" style="margin-bottom:10%;margin-top:10%;" />
            <label>Apartment</label>
            <input type="image" src="https://cdn.pixabay.com/photo/2016/11/21/15/09/apartments-1845884__340.jpg" name="Trial" class="btn-default" width="100" /><br />
            <label># of People in HouseHold?</label>
            <input type="number" name="NumberofPeople" value="Enter Number Here" style="margin-bottom:10%;" /><br />
            <label>Car</label>
            <input type="radio" name="Car" value="Car" style="margin-bottom:10%;" />
            <label>Truck</label>
            <input type="radio" name="Truck" value="Truck" />
            <label>Bus</label>
            <input type="radio" name="Bus" value="Bus" /><br />
            <label>Meats</label>
            <input type="radio" name="Meats" value="Meats" style="margin-bottom:10%;" />
            <label>Vegetarian</label>
            <input type="radio" name="Vegetarian" value="Vegetarian" />
            <label>Vegan</label>
            <input type="radio" name="Vegan" value="Vegan" /><br />
            <label>This is your Carbon Footprint</label>
            <input type="number" name="CarbonFootprint" value="....." readonly="readonly" />
        </p>
    </div>

</body>
</html>



